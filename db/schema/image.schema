create_table :images, id: :bigserial do |t|
  t.string :image, limit: 256
  t.string :note, limit: 200
  t.string :type, index: true
  t.integer :creation_id, limit: 8
  t.integer :piece_id, limit: 8

  t.timestamps null: false
end

add_foreign_key :images, :creations, column: :creation_id, name: 'fk_images_creations_creation_id'
add_foreign_key :images, :pieces, column: :piece_id, name: 'fk_images_pieces_piece_id'
